rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuth() {
      return request.auth != null;
    }

    // Use custom claims to check roles. This is more secure and efficient.
    function isAdmin() {
      return isAuth() && request.auth.token.role == "admin";
    }

    function isManager() {
      return isAuth() && request.auth.token.role == "manager";
    }

    function isCadet() {
      return isAuth() && request.auth.token.role == "cadet";
    }

    // USERS
    match /users/{userId} {
      // Admins/Managers can read all user profiles.
      // Users can read/update their own profile.
      allow read: if isAdmin() || isManager() || (isAuth() && request.auth.uid == userId);
      allow update: if isAdmin() || (isAuth() && request.auth.uid == userId);
      // Creation/deletion must be handled by secure server-side actions.
      allow create, delete: if false;
    }

    // CAMPS
    match /camps/{campId} {
      allow create, update, delete: if isAdmin();
      allow read: if isAdmin() || isManager() || isCadet();
    }

    // CAMP REGISTRATIONS
    match /camp_registrations/{regId} {
      allow create: if isCadet();
      // Admins/Managers can read all registrations.
      // Cadets can only read their own registration.
      allow read: if isAdmin() || isManager() || (isAuth() && resource.data.cadetId == request.auth.uid);
      allow delete: if isAdmin();
    }

    // ATTENDANCE
    match /attendance/{dateId} {
      allow read: if isAdmin() || isManager();
      allow write: if isAdmin();
    }
    match /attendance/{dateId}/records/{userId} {
      // Admins/Managers can read all attendance.
      // Cadets can only read their own.
      allow read: if isAdmin() || isManager() || (isAuth() && request.auth.uid == userId);
      allow create, update: if isAdmin();
    }
  }
}
